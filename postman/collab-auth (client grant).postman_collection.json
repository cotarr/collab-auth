{
	"info": {
		"name": "collab-auth (client grant)",
		"description": "See collab-auth/postman/README.md",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Clear Global Variables",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"// Clear global variables",
							"pm.globals.unset('access_token');",
							"pm.globals.unset('refresh_token');",
							"",
							"",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "application/json",
						"type": "default"
					}
				],
				"url": {
					"raw": "{{auth_host}}/status",
					"host": [
						"{{auth_host}}"
					],
					"path": [
						"status"
					]
				}
			},
			"response": []
		},
		{
			"name": "/oauth/token (Client Cred)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Extract tokens to global variables\", function () {",
							"    pm.globals.set('access_token', null);",
							"    pm.globals.set('refresh_token', null);",
							"    let accessToken = pm.response.json()['access_token'];",
							"    if (accessToken) {",
							"        pm.globals.set('access_token', accessToken);",
							"    } else {",
							"        throw new Error('An access_token was not found in response');",
							"    }",
							"    let refreshToken = pm.response.json()['refresh_token'];",
							"    if ((refreshToken) && (refreshToken.length > 0)) {",
							"        throw new Error('Client grant should not have refresh_token')",
							"    }",
							"});",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Basic {{client_base64}}",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "application/json",
						"type": "default"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "default"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"grant_type\": \"client_credentials\",\n  \"scope\": \"{{scopes}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{auth_host}}/oauth/token",
					"host": [
						"{{auth_host}}"
					],
					"path": [
						"oauth",
						"token"
					]
				}
			},
			"response": []
		},
		{
			"name": "/oauth/introspect",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"body has grant type client_credentials\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.grant_type).to.eql(\"client_credentials\");",
							"});",
							"pm.test(\"body has active true\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.active).to.eql(true);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"disabledSystemHeaders": {
					"accept": true
				}
			},
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Basic {{client_base64}}",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"warning": "This is a duplicate header and will be overridden by the Content-Type header generated by Postman.",
						"key": "Content-Type",
						"value": "application/json",
						"type": "default"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"access_token\": \"{{access_token}}\"\n}\n"
				},
				"url": {
					"raw": "{{auth_host}}/oauth/introspect",
					"host": [
						"{{auth_host}}"
					],
					"path": [
						"oauth",
						"introspect"
					]
				}
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	]
}