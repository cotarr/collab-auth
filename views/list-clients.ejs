<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Info</title>
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <%- include('menu-header') %>
    <div class="scrollable-div">
      <h2>List Clients</h2>

      <table class='user-table' border="1" cellpadding="5">
      <tr>
        <th></th>
        <th></th>
        <th>Client ID</th>
        <th>Name</th>
        <th></th>
      </tr>
      <% for(var i=0; i < clients.length; i++) { %>
         <tr>
           <td><a href="/panel/viewclient?id=<%= clients[i].id %>"><button class="button">View</button></a></td>
           <td><a href="/panel/editclient?id=<%= clients[i].id %>"><button class="button">Edit</button></a></td>
           <td><%= clients[i].clientId %></td>
           <td><%= clients[i].name %></td>
           <td><a href="/panel/deleteclient?id=<%= clients[i].id %>"><button class="button">Delete</button></a></td>
         </tr>
      <% } %>
      </table>
      <div>
        <div class="vh-20"></div>
        <a href="/panel/createclient"><button class="button">Create New Client</button></a>
        <a href="/panel/menu"><button class="button lm-20" type="button">Cancel</button></a>
      </div>
    </div>
    <%- include('menu-footer') %>
  </body>
</html>
