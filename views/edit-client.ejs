<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Client</title>
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <%- include('menu-header') %>
    <div class="scrollable-div">
      <h2>Edit Client</h2>
      <form action="/panel/editclient" method="post" autocomplete="OFF">
        <fieldset>

          <!-- Hidden input for record id -->
          <input class="input" name="id" type="hidden" value="<%= aclient.id %>" />

          <table class="account-table" border="1" cellpadding="5px">
            <tr><td>Id</td></td><td><%= aclient.id %></td></tr>
            <tr><td>Client ID</td><td><%= aclient.clientId %></td></tr>
            <tr>
              <td><label for "name">Client Name</label></td>
              <td><input class="input" type="text" name="name" value="<%= aclient.name %>" /></td>
            </tr>
            <tr>
              <td><label for="clientSecret">Client Secret</label></td>
              <td><input class="input" type="text" name="clientSecret" value="<%= aclient.clientSecret %>"/></td>
            </tr>
            <tr>
              <td><label for "trustedClient">Trusted Client</label></td>
              <td><input type="checkbox" name="trustedClient" <%= aclient.trustedClient %> ></td>
            </tr>
            <tr>
              <td><label for "allowedScope">allowedScope</label></td>
              <td><textarea type="text" name="allowedScope" cols="80" rows="3"><%= aclient.allowedScope %></textarea></td>
            </tr>
            <tr>
              <td><label for "allowedRedirectURI">Allowed Redirect URI</label></td>
              <td><textarea type="text" name="allowedRedirectURI" cols="80" rows="3"><%= aclient.allowedRedirectURI %></textarea></td>
            </tr>
            <tr><td>Updated At</td><td><%= aclient.updatedAt %></td></tr>
            <tr><td>Created At</td><td><%= aclient.createdAt %></td></tr>
          </table>
          <div class="div-height-20"></div>
          <div>
            <button class="button" type="submit" value="Submit">Submit</button>
            <a href="/panel/menu"><button class="button lm-20" type="button">Cancel</button></a>
          </div>
        </fieldset>
      </form>
      <div class="div-height-20"></div>
    </div>
    <%- include('menu-footer') %>
  </body>
</html>
